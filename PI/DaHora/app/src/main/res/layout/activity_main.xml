<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreen"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ImageView_logo_Main"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_logo_png"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33" />

    <ImageView
        android:id="@+id/ImageView_textlogo_Login"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_da_hora_png"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="@+id/ImageView_logo_Main"
        app:layout_constraintStart_toStartOf="@+id/ImageView_logo_Main"
        app:layout_constraintTop_toBottomOf="@+id/ImageView_logo_Main" />


</androidx.constraintlayout.widget.ConstraintLayout>